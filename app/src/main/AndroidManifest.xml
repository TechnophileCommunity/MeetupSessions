<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="technophile.app.com.todomvp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.list_task.TaskListActivity"
            android:label="@string/task_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.add_task.AddTaskActivity"
            android:label="@string/add_task"
            android:parentActivityName=".ui.list_task.TaskListActivity" />
        <activity android:name=".ui.detail_task.TaskDetailActivity"></activity>
    </application>

</manifest>